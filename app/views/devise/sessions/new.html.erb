<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Connexion</h2>
                </div>
                <div class="card-body">
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                        <%= f.input :email,
                                    required: false,
                                    autofocus: true,
                                    input_html: { autocomplete: "email", class: "form-control" },
                                    label: 'Email',
                                    label_html: { class: "form-label" } %>
                    </div>
                    <div class="form-group">
                        <%= f.input :password,
                                    required: false,
                                    input_html: { autocomplete: "current-password", class: "form-control" },
                                    label: 'Mot de passe',
                                    label_html: { class: "form-label" } %>
                    </div>
                    <div class="form-group form-check">
                        <%= f.input :remember_me,
                                    as: :boolean,
                                    input_html: { class: "form-check-input" },
                                    label_html: { class: "form-check-label" } if devise_mapping.rememberable? %>
                    </div>
                    <div class="form-group text-center">
                        <%= f.button :submit, "Se connecter", class: "btn btn-primary" %>
                    </div>
                    <% end %>
                </div>
            </div>
            <div class="mt-3 text-center">
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>
